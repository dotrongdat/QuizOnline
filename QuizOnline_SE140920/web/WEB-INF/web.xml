<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>nonAuthenticate</param-name>
        <param-value>/WEB-INF/nonAuthenticate.properties</param-value>
    </context-param>
    <context-param>
        <param-name>authenticate</param-name>
        <param-value>/WEB-INF/authenticate.properties</param-value>
    </context-param>
    <context-param>
        <param-name>authorize</param-name>
        <param-value>/WEB-INF/authorize.properties</param-value>
    </context-param>
    <context-param>
        <param-name>disallowDirectAccess</param-name>
        <param-value>/WEB-INF/disallowDirectAccess.properties</param-value>
    </context-param>
    <filter>
        <filter-name>AuthenticatedFilter</filter-name>
        <filter-class>datdt.filter.AuthenticatedFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizedFilter</filter-name>
        <filter-class>datdt.filter.AuthorizedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticatedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
           30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>QuizOnlineDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
